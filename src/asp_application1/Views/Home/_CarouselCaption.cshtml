@inject SignInManager<ApplicationUser> SignInManager

<p>
    @if (SignInManager.IsSignedIn(User))
    {
        <a class="btn btn-info btn-large" asp-controller="MapUnits" asp-action="GraphicIndex">Get Started</a>
    }
    else
    {
        <p>You need to Login before playing the game.</p>
        <a class="btn btn-info btn-large" asp-controller="Account" asp-action="Register">Register</a>
        <a class="btn btn-info btn-large" asp-controller="Account" asp-action="Login">Login</a>
    }
</p>